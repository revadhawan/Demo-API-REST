<form id="login" method="post">
    <input type='email' name="email" value= "" placeholder="Tu Email">
    <br><br>
    <input type='password' name="password" value= "" placeholder="Tu Contraseña">
    <br><br>
    <input type="submit" value="Login">
</form>

<script type="text/javascript">
    const formLogin = document.querySelector('#login')
    const formData = new FormData(formLogin)

    formLogin.addEventListener('submit', event => {
        event.preventDefault() //Por defecto que no se recarge la página
        fetch('/api/signin', { //Pasar el objeto con propiedad POST
            method: 'POST',
            bosy: formData
        })
        .then(res => res.json())
        .then(data => {
            localStorage.setItem('token', data.token)
        })
    })
</script>